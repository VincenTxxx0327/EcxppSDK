<?xml version="1.0" encoding="utf-8"?>
<com.ecxppsdk.widget.theme.ThemeLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                                 android:id="@+id/ll_footer_view"
                                                                 android:layout_width="match_parent"
                                                                 android:layout_height="wrap_content"
                                                                 android:gravity="center">

    <ProgressBar
        android:id="@+id/pb_footer_bar"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_margin="8dp"/>

    <com.ecxppsdk.widget.theme.ThemeTextView
        android:id="@+id/tv_footer_text"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:gravity="center"
        android:text="@string/text_loading"
        android:textColor="?attr/theme_textColor_gray"
        android:textSize="18sp"/>
</com.ecxppsdk.widget.theme.ThemeLinearLayout>